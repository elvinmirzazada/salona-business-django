# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-app-name.railway.app,localhost,127.0.0.1

# Database Configuration (SQLite only)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# Redis Configuration (Railway will provide REDIS_URL automatically if needed)
REDIS_URL=redis://user:password@host:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Service URLs
SERVICE_URL=127.0.0.1:8000
ENDPOINT_URL=127.0.0.1:8000

# API Configuration for JavaScript
API_BASE_URL=http://127.0.0.1:8000

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Static Files
STATIC_URL=/static/

# Railway-specific variables (automatically provided by Railway)
# PORT=8000
# RAILWAY_ENVIRONMENT=production
